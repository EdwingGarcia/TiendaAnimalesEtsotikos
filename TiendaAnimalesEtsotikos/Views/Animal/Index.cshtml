@model List<Animal>

@{
    ViewData["Title"] = "Lista de animales";
}

<div class="container">
    <h1>@ViewData["Title"]</h1>
    <button type="button" class="btn btn-success" onclick="location.href='@Url.Action("Create", "Animal")'">Ingresar un animal</button>

    <form asp-controller="Animal" asp-action="BuscarPorPropietario" method="get" class="my-4">
        <div class="input-group">
            <input type="text" name="Propietario" class="form-control" placeholder="Buscar Animal por propietario">
            <div class="input-group-append">
                <button type="submit" class="btn btn-success">Buscar</button>
            </div>
        </div>
    </form>

    <p>Listado de nuestros animales. Como administrador, usted puede ingresar, editar, visualizar y borrar animales.</p>

    <table class="table table-striped">
        <thead class="thead-dark">
            <tr>
                <th>Id</th>
                <th>Nombre</th>
                <th>Nombre Cientifico</th>
                <th>Pais de origen</th>
                <th>Altura</th>
                <th>Peso</th>
                <th>Status</th>
                <th>Enfermedad</th>
                <th>Cedula Cliente</th>
                <th>Acciones</th>
            </tr>
        </thead>

        <tbody>
            @foreach (var Item in Model)
            {
                <tr>
                    <td>@Item.Id</td>
                    <td>@Item.Nombre</td>
                    <td>@Item.NombreCientifico</td>
                    <td>@Item.PaisOrigen</td>
                    <td>@Item.Altura</td>
                    <td>@Item.Peso</td>
                    <td>@Item.Status</td>
                    <td>@Item.Enfermedad</td>
                    <td>@Item.Propietario</td>
                    <td>
                        <div class="btn-group" role="group" aria-label="Basic example">
                            <a asp-action="Delete" asp-route-Id="@Item.Id" class="btn btn-warning"><i class="bi bi-trash-fill"></i></a>
                            <a asp-action="Edit" asp-route-Id="@Item.Id" class="btn btn-info"><i class="bi bi-pencil-square"></i></a>
                            <a asp-action="Details" asp-route-Id="@Item.Id" class="btn btn-danger"><i class="bi bi-eye-fill"></i></a>
                        </div>
                    </td>
                </tr>
            }
        </tbody>
    </table>
</div>
