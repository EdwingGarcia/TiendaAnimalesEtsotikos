@model Animal
@{
    ViewData["Title"] = "Adopcion animales";
}
<h1>@ViewData["Title"]</h1>

<p>Adopte uno de nuestros animales! c:</p>

<form method="post">

    <div class="mb-3">
        <label>Id</label>
        <input asp-for="Id" class="form-control" disabled>
    </div>
    <div class="mb-3">
        <label>Nombre Animal</label>
        <input asp-for="Nombre" class="form-control" disabled>
    </div>
    <div class="mb-3">
        <label>Propietario</label>
        <input asp-for="Propietario" class="form-control">
    </div>


    <div class="row col-6">
        <div class="col-6 m-auto">
            <button type="submit" class="btn btn-primary">Guardar</button>
        </div>
        <div class="col-6 m-auto">
            <a  asp-action="Index" class="btn btn-outline-primary">Regresar</a>
        </div>
    </div>

</form>

