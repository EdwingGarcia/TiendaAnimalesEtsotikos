
@model Cliente
@{
    ViewData["Title"] = "Login";
    Layout = "LayoutLogin";

}

<link rel="stylesheet" href="~/css/login.css" asp-append-version="true" />
<link rel="stylesheet" href="sweetalert2.min.css"/>


