<body>
    

    <div class="container">
        <div class="backbox">
            <div class="loginMsg">
                <div class="textcontent">
                    <p class="title">No tienes cuenta?</p>
                    <p>Ingresa a nuestra plataforma.</p>
                    <button id="switch1">SIGN UP</button>
                </div>
            </div>
            <div class="signupMsg visibility">
                <div class="textcontent">
                    <p class="title">Ya tienes una cuenta?</p>
                    <p>Log in para administrar.</p>
                    <button id="switch2">LOG IN</button>
                </div>
            </div>
        </div>
        <!-- backbox -->

        <div class="frontbox">

            <div class="login">
                <form asp-controller="Home" asp-action="Login"  method="post">
                <h2>LOG IN</h2>
                    <h6>Bienvenido de nuevo!</h6>
                <div class="inputbox">
                        <input asp-for="Cedula"  type="text" name="Cedula" placeholder="  CEDULA">
                        <input asp-for="Password" type="password" name="password" placeholder="  PASSWORD">
                </div>
                 <p style="color: red; ">@ViewBag.ErrorMsg</p>
                <button class="btn btn-primary btn-block fa-lg gradient-custom-2 mb-3" type="submit">LOGIN</button>
                </form>
            </div>

            <div class="signup hide">
                <form asp-controller="Home" asp-action="SignUp" method="post">
                <h2>SIGN UP</h2>
                    <div class="inputbox">
                        <input asp-for="Nombre" type="text" name="nombre" placeholder="  NOMBRE">
                        <input asp-for="Cedula" type="text" name="cedula" placeholder="  CEDULA">
                        <input asp-for="Direccion" type="text" name="direccion" placeholder="  DIRECCION">
                        <input asp-for ="Password" type="password" name="password" placeholder="  PASSWORD">
                </div>
                <button class="btn btn-primary btn-block fa-lg gradient-custom-2 mb-3" type="submit">SIGN UP</button>
                </form>
            </div>
